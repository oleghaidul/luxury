= semantic_form_for [:admin, @collection] do |f|
  = f.inputs do
    =f.input :name
    =f.input :boutiques, :as => :check_boxes
    =f.input :year, :as => :select,  :collection => 2011..Time.now.year
    =f.input :season, :collection => ["winter", "spring", "summer", "autumn"]
    =f.input :new_collection, :as => :boolean
    =f.buttons