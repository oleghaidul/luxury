#makeMeScrollable
  .scrollingHotSpotLeft
  .scrollingHotSpotRight
  .scrollWrapper
    .scrollableArea
      -if params[:category]
        -if Category.select(:name_eng).map(&:name_eng).include? params[:category]
          -if Brand.select(:name_eng).map(&:name_eng).include? params[:brand]
            -for collection in @collections
              -for brand in collection.brands.where(:name => params[:brand])
                -for category in brand.categories.where(:name_eng => params[:category])
                  =render category.items
          -else
            -for collection in @collections
              -for brand in collection.brands
                -for category in brand.categories.where(:name_eng => params[:category])
                  =render category.items
        -else
          -for collection in @collections
            -for brand in collection.brands.where(:name => params[:category])
              -for category in brand.categories
                =render category.items
      -else
        -for collection in @collections
          -for brand in collection.brands
            -for category in brand.categories
              =render category.items
        
          


