#makeMeScrollable
  .scrollingHotSpotLeft
  .scrollingHotSpotRight
  .scrollWrapper
    .scrollableArea
      -if params[:category]
        -if Category.select(:name_eng).map(&:name_eng).include? params[:category]
          -if Brand.select(:name).map(&:name).include? params[:brand]
            -for collection in @collections
              =render collection.items.where(:category_id => Category.find_by_name_eng(params[:category]).id, :brand_id => Brand.find_by_name_eng(params[:category]).id)
          -else
            -for collection in @collections
              =render collection.items.where(:category_id => Category.find_by_name_eng(params[:category]).id)
        -else
          -for collection in @collections
            =render collection.items.where(:brand_id => Brand.find_by_name_eng(params[:category]).id)
      -else
        -for collection in @collections
          =render collection.items
        
          


-if @boutique.multibrand
  =content_for :brands do
    .vert_menu
      .domtab
        %ul.domtabs
          %li
            %a{:href => "#t1"} Категории
          %li
            %a{:href => "#t2"} Бренд
        %div.div
          %h2
            %a#t1{:name => "t1"}
          -Category.all.each do |c|
            -if c.try(:brand_categories).try(:first).try(:boutique_id) == @boutique.id
              %p.each=link_to c.name, "/#{@year}/#{@season}/#{c.name_eng}"
        %div.div
          %h2
            %a#t2{:name => "t2"}
          -Brand.all.each do |b|
            -if b.try(:collection_brands).try(:first).try(:boutique_id) == @boutique.id
              %p.each=link_to b.name, "/#{@year}/#{@season}/#{b.name_eng}"
