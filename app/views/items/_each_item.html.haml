%h2=@item.name
%h3
  Коллекция: #{link_to "#{@item.collection.season.to_s + " "+@item.collection.year.to_s}",[@item.collection.brand.boutique, @item.collection.brand, @item.collection]}
.left=prev_item(@item.id, @item.collection)
.center
  .photo=image_tag @item.pictures.first.image.url(:large)
  .description=@item.description.html_safe
  .structure=@item.structure
  .pictures=render @item.pictures
.right=next_item(@item.id, @item.collection)